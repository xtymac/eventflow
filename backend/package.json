{
  "name": "@nagoya/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "match-roads": "tsx ../scripts/match-roads.ts",
    "osm:fetch-boundaries": "tsx ../scripts/fetch-ward-boundaries.ts",
    "osm:fetch-roads": "tsx ../scripts/fetch-road-network.ts",
    "osm:segment": "tsx ../scripts/segment-roads.ts",
    "osm:prepare-seed": "tsx ../scripts/prepare-seed-data.ts",
    "osm:validate": "tsx ../scripts/validate-import.ts",
    "osm:full-pipeline": "npm run osm:fetch-boundaries && npm run osm:fetch-roads && npm run osm:segment && npm run osm:prepare-seed"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@sinclair/typebox": "^0.34.9",
    "@turf/turf": "^7.3.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.38.2",
    "fastify": "^5.1.0",
    "mongodb": "^7.0.0",
    "nanoid": "^5.0.8",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
